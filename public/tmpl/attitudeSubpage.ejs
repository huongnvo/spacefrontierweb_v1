<div class="row">
    <div class="col-lg-6">
        <h3>User Input</h3>
      
            Altitude:<input class="form-control" placeholder="100" data-ng-model="attitude"/>
            <div class = "divider"></div>
            Maximum Spatial Resolution:<input class="form-control" placeholder="10" data-ng-model="resolution"/>

    </div>
    <div class="col-lg-6">
        <h3>Calculation Results</h3>
        
            Angle of Knowledge:<input  class="form-control" data-ng-model="knowledge" readonly="readonly"/>
            <div class = "divider"></div>
            Angle of Control:<input class="form-control" data-ng-model="control" readonly="readonly"/>


    </div>
    <div class="col-lg-12">
        <div class = "dividerlarge"></div>
        <div id="button">
            <button type="button" class="btn btn-primary" ng-click="myClick()" ng-disabled="loading">
                <span ng-show="loading">Searching...</span>
                <span ng-hide="loading">Search Database</span>
            </button>
        </div>
    </div>
</div>